<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="view.uaspecific.class">Xnni\MobileViewBundle\View\UserAgentSpecificViewListener</parameter>
        <parameter key="dua.class">Dua\Adapter\NetUserAgentMobileAdapter</parameter>
    </parameters>

    <services>
        <service id="view.uaspecific" class="%view.uaspecific.class%">
            <tag name="kernel.listener" event="onCoreRequest" />
            <tag name="kernel.listener" event="onCoreController" />
            <tag name="kernel.listener" event="onCoreView" />
            <argument type="service" id="service_container" />
        </service>

        <service id="dua" class="%dua.class%">
        </service>
    </services>
</container>
